<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textMonitoringId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MON-001"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/textDataType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soil Sample"
                    android:textSize="14sp"
                    android:textColor="?attr/colorPrimary" />

            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipVerificationStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VERIFIED" />

            <View
                android:id="@+id/indicatorPriority"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="?attr/colorPrimary" />

        </LinearLayout>

        <!-- Project and Date -->
        <TextView
            android:id="@+id/textProjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project Name"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textMonitoringDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sep 24, 2024"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <ImageView
                android:id="@+id/iconSyncStatus"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_check_circle_24"
                android:tint="?attr/colorPrimary" />

        </LinearLayout>

        <!-- Location -->
        <TextView
            android:id="@+id/textLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📍 Location details"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="8dp" />

        <!-- Collector -->
        <TextView
            android:id="@+id/textCollector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👤 Collected by: Dr. Smith"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="8dp" />

        <!-- Data Summary -->
        <TextView
            android:id="@+id/textDataSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 Data summary here"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurface"
            android:background="?attr/colorSurfaceVariant"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonVerify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Verify"
                app:icon="@drawable/ic_verified_24"
                style="@style/Widget.Material3.Button.TonalButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Delete"
                app:icon="@drawable/ic_delete_24"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

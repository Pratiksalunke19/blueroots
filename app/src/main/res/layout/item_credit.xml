<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textCreditId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID: CR-001"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50.0 tCO2e"
            android:textSize="18sp"
            android:textColor="@color/design_default_color_primary" />

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Verified"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textTxHash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tx: 0x123..."
            android:textSize="10sp"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/textIssuedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issued: Sep 15, 2025"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        style="?attr/materialCardViewFilledStyle">

        <!-- Header with Batch ID and Status Chip -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textCreditId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BCR-2024-001"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verified"
                android:textSize="12sp"
                app:chipBackgroundColor="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary" />

        </LinearLayout>

        <!-- AI Oracle Button (only shows for ISSUED status) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPredictFuture"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="AI Oracle"
            android:textColor="#4CAF50"
            android:textSize="12sp"
            app:backgroundTint="#E8F5E8"
            app:icon="@drawable/ic_psychology_24"
            app:iconTint="#4CAF50"
            app:iconSize="16dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Project Name -->
        <TextView
            android:id="@+id/textViewProjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project Name"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="8dp" />

        <!-- Credits Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="250.0 tCO2e"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary" />

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$85.50/tCO2e"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface" />

        </LinearLayout>

        <!-- Blockchain Status Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_eco_24"
                android:tint="?attr/colorPrimary"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tv_blockchain_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âœ“ Verified on Hedera"
                android:textSize="12sp"
                android:textColor="?attr/colorPrimary" />

        </LinearLayout>

        <!-- Transaction Hash -->
        <TextView
            android:id="@+id/tv_transaction_hash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TX: 0.0.1001@1698..."
            android:textSize="10sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp" />

        <!-- Status (Hidden for backward compatibility) -->
        <TextView
            android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Verified"
            android:textSize="12sp"
            android:visibility="gone" />

        <!-- Issued Date -->
        <TextView
            android:id="@+id/textIssuedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issued: Sep 15, 2025"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="16dp" />

        <!-- Legacy Transaction Hash (for backward compatibility) -->
        <TextView
            android:id="@+id/textTxHash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tx: 0x123..."
            android:textSize="10sp"
            android:fontFamily="monospace"
            android:visibility="gone" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonViewDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="View Details"
                app:icon="@drawable/ic_visibility_24"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonTransfer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Transfer"
                app:icon="@drawable/ic_send_24"
                style="@style/Widget.Material3.Button.TonalButton" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
